  border: 2rpx #1177b0 solid;
  background-color: #1177b0;
}

.button-hover {
  border: 2rpx #2486b9 solid;
  background-color: #2486b9;
}

.inputtext {
  font-size: 28rpx;
  margin-left: 20rpx;
