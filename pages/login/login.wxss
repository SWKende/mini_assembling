image {
  width: 80%;
  height: 350rpx;
  margin-left: 10%;
  margin-top: 20rpx;
  filter: blur(2px);
}

input {
  font-size: 28rpx;
  margin-left: 20rpx;
  color: #000;
}

switch {
  font-size: 28rpx;
  text-align: left;
  margin-left: 10%;
  color: #1177b0;
}

.box {
  position: absolute;
  bottom: 100rpx;
  width: 100%;
}

.inputbox {
  margin-bottom: 30rpx;
}

button {
  border-radius: 50rpx;
  margin-top: 30rpx;
  width: 80%;
