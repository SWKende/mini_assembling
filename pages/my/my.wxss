.content {
  margin: 30rpx 20rpx 0rpx 20rpx;
}

.diycss {
  /* position: absolute; *//* height: 350rpx; */
  border: 2rpx #e8e8e8 solid;
  padding: 25rpx;
}

.diytext_title {
  font-size: 32rpx;
  margin-bottom: 10rpx;
  color: #1177b0;
}

.diytext {
  font-size: 28rpx;
  width: 100%;
  max-height: 900rpx;
}

.Q {
  color: #036;
}

.notice {
  font-size: 22rpx;
  color: #f07c82;
  text-align: right;
}

.diyspace {
  margin-top: 20rpx;
}

.box {
  /* position: absolute; */
  height: 100%;
  width: 100%;
  top: 0;
}

.list {
  font-size: 28rpx;
  height: 100rpx;
  width: 90%;
  border-bottom: 1rpx #e8e8e8 solid;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-right: 5%;
  padding-left: 5%;
}

.messagebg {
  position: absolute;
  background-color: #f1f1f1;
  opacity: 0.3;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.messagecss {
  border: 2rpx #727272 solid;
  background-color: #fff;
  position: absolute;
  top: 10%;
  right: 10%;
  width: 80%;
  z-index: 10;
  border-radius: 10rpx;
}

.mestitle {
  text-align: center;
  margin-top: 10rpx;
  font-size: 32rpx;
}

.mesinput {
  font-size: 28rpx;
  height: 450rpx;
  width: 84%;
  margin-left: 5%;
  margin-top: 5%;
  padding: 3%;
  border: 2rpx #e8e8e8 solid;
}

.btnbox {
  margin-top: 10rpx;
  height: 100rpx;
  display: flex;
}

.btnsize {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  width: 100%;
}

.cancel {
  color: gray;
}

.sure {
  color: #1177b0;
}

.sure-hover {
  color: #fff;
}
